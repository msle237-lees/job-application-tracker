# Job Application Tracker - Environment Configuration
# Copy this file to .env and customize as needed

# Database Configuration
DATABASE_URL=sqlite:///./job_tracker.db

# Email Checker Configuration
# How often to check emails (in minutes)
EMAIL_CHECK_INTERVAL_MINUTES=60

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Optional: Use PostgreSQL instead of SQLite
# Uncomment and configure if using PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/job_tracker

# Optional: Custom log level
# LOG_LEVEL=INFO
